{% extends 'profile/index.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-header">
            My Courses
        </div>
        <div class="card-body">
            {% for course in app.user.courses %}
            <p class="mt-3">
                <a href="{{ path('app_course_details', {courseId: course.id}) }}" class="mt-3">{{ course.name }}</a>
            </p>
            {% else %}
                You are not enrolled in any courses
            {% endfor %}
        </div>
    </div>
{% endblock %}