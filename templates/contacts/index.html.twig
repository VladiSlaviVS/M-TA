{% extends 'base.html.twig' %}
{% block body %}
    <div class="courses-container">
        <div class="card">
            <div class="card-header">
                Contacts
            </div>
            <div class="card-body">
                {% for contact in contacts %}
                    <table class="table">
                        <tr>
                            <th>Name</th>
                            <td>{{ contact.name }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ contact.email }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ contact.phone }}</td>
                        </tr>
                    </table>
                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}