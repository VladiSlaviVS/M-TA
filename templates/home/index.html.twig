{% extends 'base.html.twig' %}
{% block body %}
<div>
    <div id="my-carousel" class="carousel slide" data-bs-ride="carousel">
        {#<div class="carousel-indicators">
            #}{# <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-t#}{#
            <button data-bs-target="#my-carousel" data-bs-slide-to="0" aria-current="true" aria-label="Slide 1"></button>
            <button data-bs-target="#my-carousel" data-bs-slide-to="1" aria-current="false" aria-label="Slide 2"></button>
            <button data-bs-target="#my-carousel" data-bs-slide-to="2" aria-current="false" aria-label="Slide 3"></button>
            <button data-bs-target="#my-carousel" data-bs-slide-to="3" aria-current="false" aria-label="Slide 4"></button>
            <button data-bs-target="#my-carousel" data-bs-slide-to="4" aria-current="false" aria-label="Slide 5"></button>
        </div>#}
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="images/home-page-carousel/1.jpg" alt="" class="d-block w-100" height="">
            </div>
            <div class="carousel-item">
                <img src="images/home-page-carousel/2.jpg" alt="" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="images/home-page-carousel/3.jpg" alt="" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="images/home-page-carousel/4.jpg" alt="" class="d-block w-100">
            </div>
            <div class="carousel-item">
                <img src="images/home-page-carousel/5.jpg" alt="" class="d-block w-100">
            </div>
        </div>
        <button class="carousel-control-prev" data-bs-target="#my-carousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" data-bs-target="#my-carousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="courses-container">
    {% for course in courses %}
        <div class="card mt-3">
            <div class="card-header">
                {{ course.name }}
            </div>
            <div class="card-body">
                <p>
                    {{ course.description }}
                </p>
                <p>
                  Price: &pound;{{ course.price }}
                </p>
                <p>
                    Duration: {{ course.getStartDate().format('d/m/Y H:i:s') }} - {{ course.getEndTime().format('d/m/Y H:i:s') }}
                </p>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_course_register', {courseId: course.getId()}) }}" class="btn btn-primary">Register</a>
            </div>
        </div>
    {% else %}
        <div>
            <p class="text-center fw-bold">
                <em>No courses yet<em>
            </p>
        </div>
    {% endfor %}
</div>
{% endblock %}