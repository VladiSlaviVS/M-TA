{% extends 'profile/index.html.twig' %}
{% block content %}
    <h2>Students</h2>
    {% for user in students %}
    <div class="card mt-2">
        <div class="card-header">
            {{ user.email }}
        </div>
        <div class="card-body">
            <h3>Courses {{ user.courses | length }}</h3>
            {% for course in user.courses %}
            <p class="mt-3">
                <a href="{{ path('app_course_details', {courseId: course.id}) }}" class="mt-3">{{ course.name }}</a>
            </p>
            {% else %}
                <p class="mt-3">User is not enrolled in any courses</p>
            {% endfor %}

            <h3>Articles {{ user.articles | length }}</h3>
            {% for article in user.articles %}
                <p class="mt-3">
                    <a href="{{ path('app_blog_article', {id: article.id}) }}" >{{ article.title }}</a>
                </p>
            {% else %}
                <p class="mt-3">User did not mark any articles a read</p>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
{% endblock %}