{% extends 'profile/index.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-header">
            My Articles
        </div>
        <div class="card-body">
            {% for article in app.user.articles %}
                <p class="mt-3">
                    <a href="{{ path('app_blog_article', {id: article.id}) }}" >{{ article.title }}</a>
                </p>
            {% else %}
                You did not mark any articles as read
            {% endfor %}
        </div>
    </div>
{% endblock %}